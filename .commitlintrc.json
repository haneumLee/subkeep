{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "perf",
        "ci",
        "build",
        "revert"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "auth",
        "api",
        "db",
        "ui",
        "backend",
        "frontend",
        "docker",
        "ci",
        "deps"
      ]
    ],
    "subject-max-length": [2, "always", 100],
    "subject-case": [2, "always", "lower-case"],
    "subject-empty": [2, "never"],
    "type-empty": [2, "never"]
  }
}
